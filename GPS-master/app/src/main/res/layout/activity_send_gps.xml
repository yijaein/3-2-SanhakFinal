<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yayadiallo.com.lgk.SendGpsActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center_vertical|center_horizontal">

    <Button
        android:id="@+id/Button_retrieveContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/telephone"
        android:text="Choisir un contact"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:background="@color/hue"
        android:layout_marginBottom="20dp"
        android:padding="5dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_phone"
        android:hint="Saisissez un numÃ©ro de tel."
        android:textAlignment="center"
        android:phoneNumber="true"
        android:layout_below="@+id/Button_retrieveContact"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/Button_retrieveContact"
        android:layout_alignStart="@+id/Button_retrieveContact"
        android:layout_alignRight="@+id/Button_retrieveContact"
        android:layout_alignEnd="@+id/Button_retrieveContact"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_lieu"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/Button_retrieveContact"
        android:layout_alignStart="@+id/Button_retrieveContact"
        android:layout_below="@+id/editText_phone"
        android:layout_alignRight="@+id/Button_retrieveContact"
        android:layout_alignEnd="@+id/Button_retrieveContact"
        android:hint="Saisissez un nom de lieu"
        android:layout_marginBottom="10dp"
        android:maxLength="15"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer le SMS"
        android:id="@+id/btnSendSMS"
        android:layout_below="@+id/editText_lieu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</LinearLayout>